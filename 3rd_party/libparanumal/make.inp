LIBP_OPT_FLAGS =
LIBP_EXT_LIBS  = -lBlasLapack

# compiler flags to be used (set to compile with debugging on)
CXX := $(NEKRS_CXX)
CXXFLAGS := $(NEKRS_CXXFLAGS) $(compilerFlags) $(flags) \
	 -I$(HDRDIR) -I$(HDRDIR)/include -I$(OGSDIR) -I$(OGSDIR)/include -I$(GSDIR)/src \
         -I$(ELLIPTICDIR) -I$(ALMONDDIR) -I$(ALMONDDIR)/include -I$(INSDIR) -I$(CDSDIR) \
         $(NEKRS_LIBP_DEFINES)

CC := $(NEKRS_CC)
CFLAGS := $(CXXFLAGS)

FC := $(NEKRS_FC)
FFLAGS := $(NEKRS_FFLAGS)

# link flags to be used
LDFLAGS := $(NEKRS_LIBP_DEFINES)

ENABLE_HYPRE = 1
