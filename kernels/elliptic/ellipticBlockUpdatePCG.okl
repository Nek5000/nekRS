@kernel void ellipticBlockUpdatePCG(const dlong N,
                                    const dlong offset,
                                    @ restrict const dfloat *invDegree,
                                    @ restrict const dfloat *Ap,
                                    const dfloat alpha,
                                    @ restrict dfloat *r,
                                    @ restrict dfloat *redr)
{
  for (dlong b = 0; b < (N + p_blockSize - 1) / p_blockSize; ++b; @outer(0)) {
    @shared volatile dfloat s_sum[p_blockSize];

    for (int t = 0; t < p_blockSize; ++t; @inner(0)) {
      int n = t + b * p_blockSize;
      s_sum[t] = 0;
      if (n < N) {
        dfloat sum = 0.0;
#pragma unroll
        for (int fld = 0; fld < p_Nfields; fld++) {
          dfloat rn = r[n + fld * offset];

          const dfloat Apn = Ap[n + fld * offset];

          rn -= alpha * Apn;
          sum += rn * rn;

          r[n + fld * offset] = rn;
        }
        s_sum[t] = sum * invDegree[n];
      }
    }

    @barrier();
#if p_blockSize > 512
    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 512)
        s_sum[t] += s_sum[t + 512];
    @barrier();
#endif

#if p_blockSize > 256
    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 256)
        s_sum[t] += s_sum[t + 256];
    @barrier();
#endif

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 128)
        s_sum[t] += s_sum[t + 128];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 64)
        s_sum[t] += s_sum[t + 64];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 32)
        s_sum[t] += s_sum[t + 32];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 16)
        s_sum[t] += s_sum[t + 16];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 8)
        s_sum[t] += s_sum[t + 8];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 4)
        s_sum[t] += s_sum[t + 4];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 2)
        s_sum[t] += s_sum[t + 2];
    @barrier();

    for (int t = 0; t < p_blockSize; ++t; @inner(0))
      if (t < 1)
        redr[b] = s_sum[0] + s_sum[1];
  }
}
