@kernel void pQ(const dlong N,
                   const dfloat scale,
                   @restrict const  dfloat *  MUE,
                   @restrict const  dfloat *  DIV,
                   @restrict const  dfloat *  P,
                   @restrict dfloat *  PQ)
{
  for(dlong n=0;n<N;++n;@tile(p_blockSize,@outer,@inner)){
    if(n<N){
      PQ[n] = P[n] + scale*MUE[n]*DIV[n];
    }
  }
}
