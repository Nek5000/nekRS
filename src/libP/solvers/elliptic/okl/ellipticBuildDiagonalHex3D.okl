                                          const dlong offset,
                                          const int allNeumann,
                                          const dfloat allNeumannScale,
                                          @restrict const int*  mapB,
                                          @restrict const dfloat*  ggeo,
                                          @restrict const dfloat*  D,
                                          @restrict const dfloat*  S,
                                          @restrict const dfloat*  MM,
