[OCCA]
backend = CUDA
deviceNumber = LOCAL-RANK

[GENERAL] 
polynomialOrder = 7
#startFrom = restart.fld
stopAt = endTime
endTime = 1.0 
dt = 2e-04
timeStepper = bdf2
writeControl = runTime
writeInterval = 0.1

[PRESSURE]
preconditioner = semg_amg
residualTol = 1e-08

[VELOCITY]
residualTol = 1e-12
viscosity = -100

[SCALAR01]
residualTol = 1e-12
diffusivity = -100

[TEMPERATURE]
residualTol = 1e-12
conductivity = -100
