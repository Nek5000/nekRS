@kernel void gather(
  const dlong numRows,
  @restrict const hlong* dof_map,
  @restrict const pfloat* w,
  @restrict pfloat* buffer
)
{
  for(dlong localRow = 0; localRow < numRows; ++localRow; @tile(p_blockSize, @outer, @inner))
  {
    if(localRow < numRows){
      buffer[localRow] = w[dof_map[localRow]];
    }
  }
}
