@kernel void insSubCycleStrongCubatureVolumeHex3D(const dlong Nelements,
                                                  @restrict const dlong*   elementList,
                                                  @restrict const dfloat*  vgeo,
                                                  @restrict const dfloat*  cubvgeo,
                                                  @restrict const dfloat*  cubD,
                                                  @restrict const dfloat*  cubInterpT,
                                                  @restrict const dfloat*  cubProjectT,
                                                  const dlong offset,
                                                  const dlong NUOffset,
                                                  @restrict const dfloat*  invLumpedMassMatrix,
                                                  @restrict const dfloat*  c,
                                                  @restrict const dfloat*  U,
                                                  @restrict const dfloat*  Ud,
                                                  @restrict dfloat*  NU)
{
  // (phi, U.grad Ud)
  for(dlong e = 0; e < Nelements; ++e; @outer(0)) {
    @shared dfloat s_cubD[p_cubNq][p_cubNq];
    @shared dfloat s_cubInterpT[p_Nq][p_cubNq];
    @shared dfloat s_cubProjectT[p_cubNq][p_Nq];

    @shared dfloat s_U[p_cubNq][p_cubNq];
    @shared dfloat s_V[p_cubNq][p_cubNq];
    @shared dfloat s_W[p_cubNq][p_cubNq];

    @shared dfloat s_Ud[p_cubNq][p_cubNq];
    @shared dfloat s_Vd[p_cubNq][p_cubNq];
    @shared dfloat s_Wd[p_cubNq][p_cubNq];

    @shared dfloat s_U1[p_cubNq][p_cubNq];
    @shared dfloat s_V1[p_cubNq][p_cubNq];
    @shared dfloat s_W1[p_cubNq][p_cubNq];

    @shared dfloat s_Ud1[p_cubNq][p_cubNq];
    @shared dfloat s_Vd1[p_cubNq][p_cubNq];
    @shared dfloat s_Wd1[p_cubNq][p_cubNq];

    @exclusive dfloat r_U[p_cubNq], r_V[p_cubNq], r_W[p_cubNq];
    @exclusive dfloat r_Ud[p_cubNq], r_Vd[p_cubNq], r_Wd[p_cubNq];

    @exclusive dfloat r_c[p_Nstages];

    @exclusive dlong element;

    for(int j = 0; j < p_cubNq; ++j; @inner(1)) {
      for(int i = 0; i < p_cubNq; ++i; @inner(0)) {
        const int id = i + j * p_cubNq;
        element = elementList[e];

#pragma unroll p_Nstages 
        for (int s = 0; s < p_Nstages; s++) {
          r_c[s] = c[s];
        }

        if (id < p_Nq * p_cubNq) {
          s_cubInterpT[0][id] = cubInterpT[id];
          s_cubProjectT[0][id] = cubProjectT[id];
        }

        s_cubD[0][id] = cubD[id];
#pragma unroll p_cubNq
        for(int k = 0; k < p_cubNq; ++k) {
          r_U[k]  = 0;
          r_V[k]  = 0;
          r_W[k]  = 0;
          r_Ud[k] = 0;
          r_Vd[k] = 0;
          r_Wd[k] = 0;
        }
      }
    }

    for(int c = 0; c < p_Nq; ++c) {
      @barrier("local");

      for(int b = 0; b < p_cubNq; ++b; @inner(1))
        for(int a = 0; a < p_cubNq; ++a; @inner(0))
          if(a < p_Nq && b < p_Nq) {
            // this can be improved
            const dlong id = element * p_Np + c * p_Nq * p_Nq + b * p_Nq + a;

            dfloat Ue = 0, Ve = 0, We = 0;
#pragma unroll p_Nstages 
            for (int s = 0; s < p_Nstages; s++) {
              const dfloat Um = U[id + 0 * offset + s * p_NVfields * offset];
              const dfloat Vm = U[id + 1 * offset + s * p_NVfields * offset];
              const dfloat Wm = U[id + 2 * offset + s * p_NVfields * offset];
              Ue += r_c[s] * Um;
              Ve += r_c[s] * Vm;
              We += r_c[s] * Wm;
            }

            // U.grad Ud
            s_U[b][a] = Ue;
            s_V[b][a] = Ve;
            s_W[b][a] = We;

            s_Ud[b][a] = Ud[id + 0 * offset];
            s_Vd[b][a] = Ud[id + 1 * offset];
            s_Wd[b][a] = Ud[id + 2 * offset];
          }

      @barrier("local");

      // interpolate in 'r'
      for(int b = 0; b < p_cubNq; ++b; @inner(1))
        for(int i = 0; i < p_cubNq; ++i; @inner(0))
          if(b < p_Nq) {
            dfloat U1  = 0, V1 = 0,  W1 = 0;
            dfloat Ud1 = 0,Vd1 = 0, Wd1 = 0;

            for(int a = 0; a < p_Nq; ++a) {
              dfloat Iia = s_cubInterpT[a][i];
              U1  += Iia * s_U[b][a];
              V1  += Iia * s_V[b][a];
              W1  += Iia * s_W[b][a];
              Ud1 += Iia * s_Ud[b][a];
              Vd1 += Iia * s_Vd[b][a];
              Wd1 += Iia * s_Wd[b][a];
            }

            s_U1[b][i] = U1;
            s_V1[b][i] = V1;
            s_W1[b][i] = W1;
            s_Ud1[b][i] = Ud1;
            s_Vd1[b][i] = Vd1;
            s_Wd1[b][i] = Wd1;
          }

      @barrier("local");

      // interpolate in 's'
      for(int j = 0; j < p_cubNq; ++j; @inner(1)) {
        for(int i = 0; i < p_cubNq; ++i; @inner(0)) {
          dfloat U2 = 0, V2 = 0,  W2 = 0;
          dfloat Ud2 = 0,Vd2 = 0, Wd2 = 0;

          // interpolate in b
          for(int b = 0; b < p_Nq; ++b) {
            dfloat Ijb = s_cubInterpT[b][j];
            U2 += Ijb * s_U1[b][i];
            V2 += Ijb * s_V1[b][i];
            W2 += Ijb * s_W1[b][i];
            Ud2 += Ijb * s_Ud1[b][i];
            Vd2 += Ijb * s_Vd1[b][i];
            Wd2 += Ijb * s_Wd1[b][i];
          }

          // interpolate in c progressively
#pragma unroll p_cubNq
          for(int k = 0; k < p_cubNq; ++k) {
            dfloat Ikc = s_cubInterpT[c][k];

            r_U[k] += Ikc * U2;
            r_V[k] += Ikc * V2;
            r_W[k] += Ikc * W2;

            r_Ud[k] += Ikc * Ud2;
            r_Vd[k] += Ikc * Vd2;
            r_Wd[k] += Ikc * Wd2;
          }
        }
      }
    }

#pragma unroll p_cubNq
    for(int k = 0; k < p_cubNq; ++k) {
      @barrier("local");

      for(int j = 0; j < p_cubNq; ++j; @inner(1))
        for(int i = 0; i < p_cubNq; ++i; @inner(0)) {
          s_Ud[j][i] = r_Ud[k];
          s_Vd[j][i] = r_Vd[k];
          s_Wd[j][i] = r_Wd[k];
        }

      @barrier("local");

      for(int j = 0; j < p_cubNq; ++j; @inner(1))
        for(int i = 0; i < p_cubNq; ++i; @inner(0)) {
          dfloat Udr = 0, Uds = 0, Udt = 0;
          dfloat Vdr = 0, Vds = 0, Vdt = 0;
          dfloat Wdr = 0, Wds = 0, Wdt = 0;

          for(int n = 0; n < p_cubNq; ++n) {
            dfloat Din = s_cubD[i][n];
            Udr += Din * s_Ud[j][n];
            Vdr += Din * s_Vd[j][n];
            Wdr += Din * s_Wd[j][n];
          }

          for(int n = 0; n < p_cubNq; ++n) {
            dfloat Djn = s_cubD[j][n];
            Uds += Djn * s_Ud[n][i];
            Vds += Djn * s_Vd[n][i];
            Wds += Djn * s_Wd[n][i];
          }

          for(int n = 0; n < p_cubNq; ++n) {
            dfloat Dkn = s_cubD[k][n];
            Udt += Dkn * r_Ud[n];
            Vdt += Dkn * r_Vd[n];
            Wdt += Dkn * r_Wd[n];
          }

          const dlong gid = element * p_cubNp * p_Nvgeo + k * p_cubNq * p_cubNq + j * p_cubNq + i;
          const dfloat drdx = cubvgeo[gid + p_RXID * p_cubNp];
          const dfloat drdy = cubvgeo[gid + p_RYID * p_cubNp];
          const dfloat drdz = cubvgeo[gid + p_RZID * p_cubNp];
          const dfloat dsdx = cubvgeo[gid + p_SXID * p_cubNp];
          const dfloat dsdy = cubvgeo[gid + p_SYID * p_cubNp];
          const dfloat dsdz = cubvgeo[gid + p_SZID * p_cubNp];
          const dfloat dtdx = cubvgeo[gid + p_TXID * p_cubNp];
          const dfloat dtdy = cubvgeo[gid + p_TYID * p_cubNp];
          const dfloat dtdz = cubvgeo[gid + p_TZID * p_cubNp];
          const dfloat JW   = cubvgeo[gid + p_JWID * p_cubNp];

          const dfloat Un = r_U[k];
          const dfloat Vn = r_V[k];
          const dfloat Wn = r_W[k];

          const dfloat Uhat = JW * (Un * drdx + Vn * drdy + Wn * drdz);
          const dfloat Vhat = JW * (Un * dsdx + Vn * dsdy + Wn * dsdz);
          const dfloat What = JW * (Un * dtdx + Vn * dtdy + Wn * dtdz);

          // U*dUdx + V*dUdy + W*dUdz = (U*(drdx*dUdr+dsdx*dUds+dtdx*dUdt) + V*(drdy*dUdr ..))

          // I_f^t*(J_f*C_f^t)*G_f*\hat{D}_f*I_f*u
          r_U[k] = Uhat * Udr + Vhat * Uds + What * Udt;
          r_V[k] = Uhat * Vdr + Vhat * Vds + What * Vdt;
          r_W[k] = Uhat * Wdr + Vhat * Wds + What * Wdt;
        }
    }

    // now project back in t
    for(int c = 0; c < p_Nq; ++c) {
      @barrier("local");

      for(int j = 0; j < p_cubNq; ++j; @inner(1)) {
        for(int i = 0; i < p_cubNq; ++i; @inner(0)) {
          dfloat rhsU = 0, rhsV = 0, rhsW = 0;

#pragma unroll p_cubNq
          for(int k = 0; k < p_cubNq; ++k) {
            dfloat Ikc = s_cubInterpT[c][k];
            rhsU += Ikc * r_U[k];
            rhsV += Ikc * r_V[k];
            rhsW += Ikc * r_W[k];
          }

          s_U[j][i] = rhsU;
          s_V[j][i] = rhsV;
          s_W[j][i] = rhsW;
        }
      }

      @barrier("local");

      for(int b = 0; b < p_cubNq; ++b; @inner(1))
        for(int i = 0; i < p_cubNq; ++i; @inner(0))
          if(b < p_Nq) {
            dfloat rhsU = 0, rhsV = 0, rhsW = 0;

            for(int j = 0; j < p_cubNq; ++j) {
              dfloat Ijb = s_cubInterpT[b][j];
              rhsU += Ijb * s_U[j][i];
              rhsV += Ijb * s_V[j][i];
              rhsW += Ijb * s_W[j][i];
            }

            s_Ud[b][i] = rhsU;
            s_Vd[b][i] = rhsV;
            s_Wd[b][i] = rhsW;
          }

      @barrier("local");

      for(int b = 0; b < p_cubNq; ++b; @inner(1))
        for(int a = 0; a < p_cubNq; ++a; @inner(0))
          if(a < p_Nq && b < p_Nq) {
            dfloat rhsU = 0, rhsV = 0, rhsW = 0;

            for(int i = 0; i < p_cubNq; ++i) {
              dfloat Iia = s_cubInterpT[a][i];
              rhsU += Iia * s_Ud[b][i];
              rhsV += Iia * s_Vd[b][i];
              rhsW += Iia * s_Wd[b][i];
            }

            const dlong id = element * p_Np + c * p_Nq * p_Nq + b * p_Nq + a;
            dfloat invLMM = invLumpedMassMatrix[id];

            NU[id + 0 * offset + NUOffset] = rhsU * invLMM;
            NU[id + 1 * offset + NUOffset] = rhsV * invLMM;
            NU[id + 2 * offset + NUOffset] = rhsW * invLMM;
          }
    }
  }
}

@kernel void insSubCycleStrongVolumeHex3D(const dlong Nelements,
                                          @restrict const dlong*  elementList,
                                          @restrict const dfloat*  vgeo,
                                          @restrict const dfloat*  D,
                                          const dlong offset,
                                          const dlong NUOffset,
                                          @restrict const dfloat*  invLumpedMassMatrix,
                                          @restrict const dfloat*  c,
                                          @restrict const dfloat*  U,
                                          @restrict const dfloat*  Ud,
                                          @restrict dfloat*  NU)
{
  for(dlong e = 0; e < Nelements; ++e; @outer(0)) {
    @shared dfloat s_Ud[p_Nq][p_Nq][p_Nq];
    @shared dfloat s_Vd[p_Nq][p_Nq][p_Nq];
    @shared dfloat s_Wd[p_Nq][p_Nq][p_Nq];

    @shared dfloat s_D[p_Nq][p_Nq];

    @exclusive dfloat r_c[p_Nstages];

    @exclusive dlong element;

    for(int k = 0; k < p_Nq; ++k; @inner(2))
      for(int j = 0; j < p_Nq; ++j; @inner(1))
        for(int i = 0; i < p_Nq; ++i; @inner(0)) {
          dlong id = i + j * p_Nq;
          element = elementList[e];

#pragma unroll p_Nstages
          for (int s = 0; s < p_Nstages; s++) {
            r_c[s] = c[s];
          }

          if(k == 0)
            s_D[0][id] = D[id];

          id = element * p_Np + k * p_Nq * p_Nq + j * p_Nq + i;

          const dfloat Udn = Ud[id + 0 * offset];
          const dfloat Vdn = Ud[id + 1 * offset];
          const dfloat Wdn = Ud[id + 2 * offset];

          s_Ud[k][j][i] = Udn;
          s_Vd[k][j][i] = Vdn;
          s_Wd[k][j][i] = Wdn;
        }

    @barrier("local");

    for(int k = 0; k < p_Nq; ++k; @inner(2)) {
      for(int j = 0; j < p_Nq; ++j; @inner(1)) {
        for(int i = 0; i < p_Nq; ++i; @inner(0)) {
          const dlong gid = element * p_Np * p_Nvgeo + k * p_Nq * p_Nq + j * p_Nq + i;
          const dfloat drdx = vgeo[gid + p_RXID * p_Np];
          const dfloat drdy = vgeo[gid + p_RYID * p_Np];
          const dfloat drdz = vgeo[gid + p_RZID * p_Np];
          const dfloat dsdx = vgeo[gid + p_SXID * p_Np];
          const dfloat dsdy = vgeo[gid + p_SYID * p_Np];
          const dfloat dsdz = vgeo[gid + p_SZID * p_Np];
          const dfloat dtdx = vgeo[gid + p_TXID * p_Np];
          const dfloat dtdy = vgeo[gid + p_TYID * p_Np];
          const dfloat dtdz = vgeo[gid + p_TZID * p_Np];
          const dfloat JW   = vgeo[gid + p_JWID * p_Np];

          dfloat duddr = 0, dudds = 0, duddt = 0;
          dfloat dvddr = 0, dvdds = 0, dvddt = 0;
          dfloat dwddr = 0, dwdds = 0, dwddt = 0;

#pragma unroll p_Nq
          for (int n = 0; n < p_Nq; n++) {
            const dfloat Dr = s_D[i][n];
            const dfloat Ds = s_D[j][n];
            const dfloat Dt = s_D[k][n];
            duddr += Dr * s_Ud[k][j][n];
            dudds += Ds * s_Ud[k][n][i];
            duddt += Dt * s_Ud[n][j][i];

            dvddr += Dr * s_Vd[k][j][n];
            dvdds += Ds * s_Vd[k][n][i];
            dvddt += Dt * s_Vd[n][j][i];

            dwddr += Dr * s_Wd[k][j][n];
            dwdds += Ds * s_Wd[k][n][i];
            dwddt += Dt * s_Wd[n][j][i];
          }

          dfloat duddx = drdx * duddr + dsdx * dudds + dtdx * duddt;
          dfloat duddy = drdy * duddr + dsdy * dudds + dtdy * duddt;
          dfloat duddz = drdz * duddr + dsdz * dudds + dtdz * duddt;

          dfloat dvddx = drdx * dvddr + dsdx * dvdds + dtdx * dvddt;
          dfloat dvddy = drdy * dvddr + dsdy * dvdds + dtdy * dvddt;
          dfloat dvddz = drdz * dvddr + dsdz * dvdds + dtdz * dvddt;

          dfloat dwddx = drdx * dwddr + dsdx * dwdds + dtdx * dwddt;
          dfloat dwddy = drdy * dwddr + dsdy * dwdds + dtdy * dwddt;
          dfloat dwddz = drdz * dwddr + dsdz * dwdds + dtdz * dwddt;

          const dlong id = element * p_Np + k * p_Nq * p_Nq + j * p_Nq + i;

          dfloat invLMM = invLumpedMassMatrix[id];
          dfloat Ue = 0, Ve = 0, We = 0;
#pragma unroll p_Nstages
          for (int s = 0; s < p_Nstages; s++) {
            const dfloat Um = U[id + 0 * offset + s * p_NVfields * offset];
            const dfloat Vm = U[id + 1 * offset + s * p_NVfields * offset];
            const dfloat Wm = U[id + 2 * offset + s * p_NVfields * offset];
            Ue += r_c[s] * Um;
            Ve += r_c[s] * Vm;
            We += r_c[s] * Wm;
          }

          NU[id + 0 * offset + NUOffset] =  JW * (Ue * duddx + Ve * duddy + We * duddz) * invLMM;
          NU[id + 1 * offset + NUOffset] =  JW * (Ue * dvddx + Ve * dvddy + We * dvddz) * invLMM;
          NU[id + 2 * offset + NUOffset] =  JW * (Ue * dwddx + Ve * dwddy + We * dwddz) * invLMM;
        }
      }
    }
  }
}
