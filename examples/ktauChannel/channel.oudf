@kernel void cfill(const dlong Ntotal,
                    const dlong offset,
                    const dfloat CONST,
                    @restrict dfloat * NU) 
{
  for(dlong n=0;n<Ntotal;++n;@tile(p_blockSize,@outer,@inner)){
    if(n<Ntotal){
      const dlong id = n + offset;
      NU[id] = CONST;
    }
  }
}

void scalarDirichletConditions(bcData *bc)
{
  bc->s = 0;
  if(bc->scalarId == 0) bc->s = 0; 
}
