    @shared dfloat s_Gtt[p_Nq][p_Nq][p_Nq];

    @exclusive dfloat r_q;
    @exclusive int r_masked;

    // prefetch lamda 0
    for(int k = 0; k < p_Nq; ++k; @inner(2))
      for(int j = 0; j < p_Nq; ++j; @inner(1))
