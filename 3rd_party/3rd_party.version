    mkdir -p hypre
    tar -zxf ${HYPRE_TAR} -C ./hypre --strip-components=1 
  elif [ -z ${HYPRE_ARCHIVE_URL} ]; then

    if [ -z ${HYPRE_GIT_URL} ]; then
      echo "No way to clone HYPRE."
      exit 1
    elif [ -z ${HYPRE_GIT_BRANCH} ]; then
