[GENERAL]
polynomialOrder = 8 
cubaturePolynomialOrder = 10 

#startFrom = "r.fld"

stopAt = endTime
endTime = 2600

dt = targetCFL=2 + max=2e-2
timeStepper = tombo2

writeControl = simulationTime 
writeInterval = 100 

regularization = hpfrt + nModes=3 + scalingCoeff=10

[PROBLEMTYPE]
equation = navierStokes+variableViscosity

[PRESSURE]
solver = pfcg
residualTol = 1e-04
preconditioner = multigrid
smootherType = JAC+Chebyshev
pMGSchedule = p=8, p=4, p=1, p=4, p=8

[VELOCITY]
boundaryTypeMap = v, shl
residualTol = 1e-06
density = 1.0
viscosity = 1/50e6

[TEMPERATURE]
boundaryTypeMap = flux, flux 
residualTol = 1e-06
rhoCp = 1.0
conductivity = 1/50e6

[BOOMERAMG]
iterations = 1

[CASEDATA]
#/* latitude north */
nlat = 73.0

#/* geostrophic wind speed [m/s] */
uref = 8.0

lref = 100.0
#/* potential temperature */
tref = 263.5
#/* initial surface temperature */
ts0  = 265.0
#/* surface cooling rate [k/h] */
scr = -0.25
#/* inversion layer strength [k/m]*/
ilstrength = 0.01

z1 = 1.0
z0 = 0.1

number_elements_x = 16 
number_elements_y = 16 
number_elements_z = 16 
xlen  = 4.0
ylen  = 4.0
zlen  = 4.0

betam = 4.8
betah = 7.8
kappa = 0.4
zwall = 0.01 # 1.0/lref
