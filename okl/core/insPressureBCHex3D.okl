// We are solving for Pressure Difference
@kernel void insPressureDirichletBCHex3D(const dlong Nelements,
                                         const dfloat time,
                                         const dfloat dt,
                                         const dlong offset,
                                         @restrict const dfloat*  sgeo,
                                         @restrict const dfloat*  x,
                                         @restrict const dfloat*  y,
                                         @restrict const dfloat*  z,
                                         @restrict const dlong*  vmapM,
                                         @restrict const int*  EToBM,
                                         @restrict const int*  EToB,
                                         @restrict const dfloat*  W,
                                         @restrict const dfloat*  U,
                                         @restrict const dfloat*  P,
                                         @restrict dfloat*  PI)
{
  for(dlong e = 0; e < Nelements; e++; @outer(0))
    for(int n = 0; n < p_Nfp * p_Nfaces; ++n; @inner(0)) {
      const int f = n / p_Nfp;
      struct bcData bc;
      const dlong idM = vmapM[e * p_Nfp * p_Nfaces + n];
      const dlong bcType = EToB[f + p_Nfaces * e];

      if(bcType == 3) {
        bc.idM  = idM;
        bc.id   = EToBM[f + p_Nfaces * e];
        bc.time = time;
        bc.fieldOffset = offset;
        bc.x  = x[idM];
        bc.y  = y[idM];
        bc.z  = z[idM];
        const dlong sk = e * p_Nfaces * p_Nfp + n;
        bc.nx = sgeo[sk * p_Nsgeo + p_NXID];
        bc.ny = sgeo[sk * p_Nsgeo + p_NYID];
        bc.nz = sgeo[sk * p_Nsgeo + p_NZID];
        // Get Current Solution i.e. Un
        bc.uM = U[idM + 0 * offset];
        bc.vM = U[idM + 1 * offset];
        bc.wM = U[idM + 2 * offset];
        bc.pM = P[idM];
        bc.wrk = W;

        bc.pP = 0.f;
        insPressureDirichletConditions3D(&bc);
        PI[idM] = bc.pP;
      }
    }
}
