@kernel void insPQ(const dlong N,
                   const dfloat scale,
                   @restrict const  dfloat *  MUE,
                   @restrict const  dfloat *  QTL,
                   @restrict const  dfloat *  P,
                   @restrict dfloat *  PQ)
{
  for(dlong n=0;n<N;++n;@tile(256,@outer,@inner)){
    if(n<N){
      PQ[n] = P[n] + scale*MUE[n]*QTL[n];
    }
  }
}
