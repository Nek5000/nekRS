// y = beta*y + alpha*x
@kernel void vectorAdd1(const dlong   N,
                        const dfloat  alpha,
                        const dfloat  beta,
                        @restrict const dfloat * x,
                        @restrict       dfloat * y){

  for(dlong i=0;i<N;++i;@tile(p_BLOCKSIZE,@outer,@inner)){
    dfloat yi = 0.0;
    if (beta)
      yi = beta*y[i];

    y[i] = yi + alpha*x[i];
  }
}

// z = alpha*x + beta*y
@kernel void vectorAdd2(const dlong  N,
                        const dfloat alpha,
                        const dfloat beta,
                        @restrict const dfloat * x,
                        @restrict const dfloat * y,
                        @restrict       dfloat * z){

  for(dlong i=0;i<N;++i;@tile(p_BLOCKSIZE,@outer,@inner)){
    z[i] = beta*y[i] + alpha*x[i];
  }
}
